{
    "id": "com.github.finefindus.eyedropper",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "eyedropper",
    "finish-args": [
        "--socket=fallback-x11",
        "--share=ipc",
        "--socket=wayland",
        "--device=dri",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.14.0"
                }
            ]
        },
        {
            "name": "eyedropper",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FineFindus/eyedropper/releases/download/v2.0.0/eyedropper-2.0.0.tar.xz",
                    "sha256": "6dce08520d7a7029fde75315679e2927c44cd5a467dfa00387e7e15dac510236"

                }
            ]
        }
    ]
}
